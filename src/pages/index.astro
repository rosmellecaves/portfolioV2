---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/layout.astro";


---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<title>Rosmelle Cuevas</title>
	</head>
	<body>
		<Layout>
		<Hero />
		
		<div class="p-5 md:p-16 lg:p-28 bg-no-repeat bg-center bg-cover container mx-auto relative"> <!-- Adding relative positioning -->
    
    
			<!-- hero -->
			<div class="flex flex-col max-w-7xl text-white relative z-10"> <!-- Adding z-index to ensure hero content is above the overlay -->
				<div class="flex flex-col text-white mt-5">
					<h1 class="text-4xl md:text-[50px] leading-tight font-semibold font-typography">Designs</h1>
				</div>
			</div>

			<div class="mx-auto w-2/4 py-5">
				<div class="p-4 relative flex flex-col items-center rounded-2xl transition-all duration-500 md:flex-row bg-accent">
					<div class="block overflow-hidden w-full">
						<img src="/src/gocreate.png" alt="Card image" class="h-full rounded-2xl object-cover" />
					</div>
					<div class="p-4">
						<h4 class="text-base font-typography text-white mb-2 capitalize transition-all duration-500 ">Go Create!</h4>
						<p class="text-sm font-secondary text-white transition-all duration-500 leading-5 mb-5"> College project, an ecommerce for arts and galleries</p>
						<a href="https://abasushi.github.io/gocreate/?fbclid=IwAR0lrpkUSmlrpD_cuAHs2gWk50_uQhkPQYTgYS80-BbOeyCIMHPWOpaIO74"  target="blank" class="bg-secondary2 shadow-sm rounded-full py-2 px-5 text-xs text-white font-semibold">Visit site</a>
					</div>
				</div>
			</div>
	
			<div class="mx-auto w-2/4 py-5">
				<div class="p-4 relative flex flex-col items-center rounded-2xl transition-all duration-500 md:flex-row bg-accent">
					<div class="block overflow-hidden w-full">
						<img src="/src/gthrift.png" alt="Card image" class="h-full rounded-2xl object-cover" />
					</div>
					<div class="p-4">
						<h4 class="text-base font-typography text-white mb-2 capitalize transition-all duration-500 ">G! Thriftin</h4>
						<p class="text-sm font-secondary text-white transition-all duration-500 leading-5 mb-5"> First sample design as an aspiring web designer </p>
						<a href="https://dribbble.com/shots/22708342-G-Thriftin-Mockup-Web-Design"  target="blank" class="bg-secondary2 shadow-sm rounded-full py-2 px-5 text-xs text-white font-semibold">Visit site</a>
					</div>
				</div>
			</div>
	
			<div class="flex items-center mx-auto w-2/4 py-5 text-white">
				<a href="/design" class="py-2 hover:brightness-105 font-secondary hover:underline">View more designs</a>
				<span class="ml-2"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
					<path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
				  </svg>
				</span>
			</div>
		 
			<span class="flex items-center mt-20 w-2/4  mx-auto py-5 text-accent">
				<p class="mr-2 font-secondary">Made with</p>
				<img src="/assets/astro.svg" alt="" class="w-3 mr-2">
				<img src="/assets/tailwind.svg" alt="" class="w-3 mr-2">
				<img src="/assets/html.svg" alt="" class="w-3 mr-2">
				<img src="/assets/css.svg" alt="" class="w-3">
			</span>
			<p class="w-2/4 mx-auto text-accent">Design inspired from <a href="https://alexjpate.com/" class="hover:underline">Alex Pate - Web Engineer & Designer (alexjpate.com)</a></p>
		</div>

	

		</Layout>
	</body>
</html>
